{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/script/(.*)", "destination": "/script/$1" },
    { "source": "/routes/(.*)", "destination": "/routes/routes.js" },
    { "source": "/(.*)", "destination": "/app.js" }
  ],
  "cleanUrls": true,
  "headers": [
    {
      "source": "/static/**",
      "headers": [{ "key": "Content-Type", "value": "text/css" }]
    },
    {
      "source": "/script/**",
      "headers": [{ "key": "Content-Type", "value": "text/javascript" }]
    }
  ]
}
