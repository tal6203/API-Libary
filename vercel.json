{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/script/(.*)", "dest": "/script/$1" },
    { "src": "/routes/(.*)", "dest": "/routes/routes.js" },
    { "src": "/(.*)", "dest": "/app.js" }
  ],
  "cleanUrls": true,
  "headers": {
    "/static/**/*.css": {
      "Content-Type": "text/css"
    },
    "/script/**/*.js": {
      "Content-Type": "text/javascript"
    }
  }
}
