{
  "version": 2,
  "builds": [
    { "src": "routes/*.js", "use": "@vercel/node" },
    { "src": "script/*.js", "use": "@vercel/node" },
    { "src": "static/**", "use": "@vercel/static" },
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/routes/(.*)", "dest": "/routes/$1.js" },
    { "src": "/script/(.*)", "dest": "/script/$1.js" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/app.js" }
  ]
}
