{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/script/(.*)", "dest": "/script/$1" },
    { "src": "/routes/(.*)", "dest": "/routes/routes.js" },
    { "src": "/(.*)", "dest": "/app.js" }
  ],
  "cleanUrls": true,
  "headers": [
    {
      "source": "/static/**/*.css",
      "headers": [{ "key": "Content-Type", "value": "text/css" }]
    },
    {
      "source": "/script/**/*.js",
      "headers": [{ "key": "Content-Type", "value": "text/javascript" }]
    }
  ]
}
